<html metal:use-macro="main.macros['master']">
  <body>
    <div metal:fill-slot="main">
      <form action="" method="POST" enctype="multipart/form-data">
        <div tal:content="structure fs.render()" />
        <input type="hidden" name="_method" value="PUT" />
        <div class="fa_field">
          <a class="ui-widget-header ui-widget-link ui-widget-button ui-corner-all" href="#" onclick="jQuery(this).parents('form').submit();">
            <span class="ui-icon ui-icon-check"></span>
            <span tal:replace="Save" />
            <input type="submit" />
          </a>
          <a class="ui-widget-header ui-widget-link ui-corner-all"
             tal:attributes="href request.route_url('fa_admin', traverse=request.model_name)">
            <span class="ui-icon ui-icon-circle-arrow-w"></span>
            <span tal:replace="Cancel" />
          </a>
        </div>
      </form>
    </div>
  </body>
</html>

